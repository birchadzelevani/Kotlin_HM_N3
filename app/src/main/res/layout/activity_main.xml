<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="0"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:onClick="equalClick"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:background="#47dac5" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="#55abca"
            android:onClick="onOperator"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:onClick="onSqrt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#55abca"
            android:text="âˆš"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginEnd="3dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#55abca"
            android:text="+/-"
            android:onClick="onOperator"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginEnd="3dp"/>


    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btnEqual"
        android:layout_marginBottom="2dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layout_marginBottom="2dp"
            >
            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="7"
                android:onClick="numClick"
                android:textSize="23sp"
                android:background="#88ff02"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="8"
                android:onClick="numClick"
                android:textSize="23sp"
                android:background="#88ff02"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="9"
                android:onClick="numClick"
                android:textSize="23sp"
                android:background="#88ff02"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="#36bcff"
                android:text="*"
                android:onClick="onOperator"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:layout_marginEnd="2dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layout_marginBottom="2dp">
            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="4"
                android:onClick="numClick"
                android:textSize="23sp"
                android:background="#88ff02"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="5"
                android:onClick="numClick"
                android:textSize="23sp"
                android:background="#88ff02"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="6"
                android:onClick="numClick"
                android:textSize="23sp"
                android:background="#88ff02"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/buttonSub"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="-"
                android:onClick="onOperator"
                android:textSize="23sp"
                android:background="#d6075d"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layout_marginBottom="2dp"
            >
            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="3"
                android:onClick="numClick"
                android:textSize="23sp"
                android:background="#88ff02"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="2"
                android:onClick="numClick"
                android:textSize="23sp"
                android:background="#88ff02"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="1"
                android:onClick="numClick"
                android:textSize="23sp"
                android:background="#88ff02"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="+"
                android:onClick="onOperator"
                android:textSize="23sp"
                android:background="#36bcff"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layout_marginBottom="2dp">
            <Button
                android:id="@+id/buttonClear"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="C"
                android:onClick="onClear"
                android:textSize="23sp"
                android:background="#0054ff"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="23sp"
                android:background="#88ff02"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="."
                android:onClick="numClick"
                android:textSize="23sp"
                android:background="#0054ff"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="/"
                android:onClick="onOperator"
                android:textSize="23sp"
                android:background="#d6075d"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"/>
        </TableRow>
    </TableLayout>




</androidx.constraintlayout.widget.ConstraintLayout>